
<section id="testmonials" class="testmonials-section">
  <div class="container" style="border: solid 1px #00b1cd; padding-bottom: 15px">
    <div class ="order-books">
      <%= sort_link(@q, :title, I18n.t('books.labels.order'), default_order: :desc) %>
    </div>
    <div class="container digg_pagination">
      <div class="cards">
        <%= render partial: "books/book_card", collection: books, as: :book %>
      </div>
      <div class ="col-md-2">
      </div>
      <div class ="col-md-8">
        <%= will_paginate @books, container: :true %>
      </div>
      <div class ="col-md-2">
      </div>
    </div>
  </div>
</section>