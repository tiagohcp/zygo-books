<div class="card book-card">
  <div class="card-body">
    <div class ="col-md-2" align="center">
      <img src=<%= url_for(book.image) %> width="100" height="120">
    </div>
    <div class="book-card-col col-md-2">
      <label class="label book-card-label is-small"><%=I18n.t('books.labels.title')%>:</label>
      <br>
      <label class="label book-card-content is-small"><%= book.title %></label>
      <br>
      <label class="label book-card-label is-small"><%=I18n.t('books.labels.author')%>:</label>
      <br>
      <label class="label book-card-content is-small"><%= book.author %></label>
    </div>
    <div class="book-card-col col-md-8">
      <label class="label book-card-label is-small"><%=I18n.t('books.labels.description')%>:</label>
      <br>
      <label class="label book-card-content is-small"><%= book.description %></label>
    </div>
  </div>
</div>